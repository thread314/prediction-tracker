<div class="section">
  <div class="block">
    <%= link_to "<< Back to " + @predictor.title, predictor_path(@predictor) %>
  </div>
  <%= render @prediction %>

  <div class="block">
    <%= @prediction.body %>
  </div>

  <div class="block">
    <%= link_to 'Report this prediction', new_prediction_report_path(@prediction) %>
    <% if user_signed_in? && (@prediction.user.id == current_user.id || current_user.admin?) %>
    | <%= link_to "Edit this prediction", edit_prediction_path(@prediction) %> | 
    <%= link_to "Destroy this prediction", @prediction, method: :delete %>
    <% end %>
  </div>

  <h5 class="title is-5">Comments</h5>

  <% @comments.each do |comment| %>
  <%= render comment %>
  <% end %>

  <div class="block">
    <%= link_to 'Add New Comment', new_prediction_comment_path(@prediction) %>
  </div>

  <div class="block">
  </div>

  <h5 class="title is-5">Outcomes</h5>
  <% @outcomes.each do |outcome| %>
  <%= render outcome %>
  <% end %>

  <div class="block">
    <%= link_to 'Lodge an outcome for this prediction', new_prediction_outcome_path(@prediction) %>
  </div>


</div>
