<% if report.errors.any? %>
<div class: "content has-text-danger">
  <div class: "title is-5"><%= pluralize(report.errors.count, "error") %> prohibited this report from being saved:</div>

  <ul>
    <% report.errors.each do |error| %>
    <li><%= error.full_message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= form_with(model: [@reportable, @report], class: "form") do |form| %>
<div class="field">
  <%= form.select :reason, @reason_list, { prompt: 'Select a Reason' } %>
</div>

<%= form.label :body, style: "display: block", class: "label"  %>
<div class="field">
  <%= form.text_area :body, class: "textarea" %>
</div>
<% if current_user.admin? %>
<div class="field">
  <%= form.select :status, Report.statuses.keys, { prompt: 'Select a Status' } %>
</div>
<% else %>
<%= form.hidden_field :status, value: "Pending" %>
<% end %>
<%= form.submit class: "button is-link" %>
<% end %>
