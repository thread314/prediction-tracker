<%= render @report %>

<div>
  <%= link_to "Edit this report", edit_report_path(@report) %> |

  <%= button_to "Destroy this report", @report, method: :delete, class: "bulma-delete-mixin is-large" %>
  <div class="block">
    <button class="bulma-delete-mixin is-large"></button>
  </div>

</div>

<h3>Comments</h3>

<% @comments.each do |comment| %>
<p>
  <%= comment.created_at %>
  <br>
  <%= comment.body %>
  <br>
  <hr>
</p>
<% end %>

<%= link_to 'Add New Comment', new_report_comment_path(@report) %>
