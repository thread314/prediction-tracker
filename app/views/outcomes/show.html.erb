<%= render @outcome %>

<div class="block">
  <em>Created by <%= User.find(@outcome.user_id).email %> on <%= @outcome.created_at.to_date %></em>
</div>

<div class="block">
  <%= link_to 'Lodge a report', new_outcome_report_path(@outcome) %> | 
  <%= link_to "Edit this outcome", edit_outcome_path(@outcome) %> | 
  <%= link_to "Destroy this outcome", @outcome, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
</div>

<h5 class="title is-5">Comments</h5>

<table class="table is-bordered is-fullwidth">
  <% @comments.each do |comment| %>
  <tr>
    <td>
      <%= render comment %>
    </td>
  </tr>
  <% end %>
</table>

<div class="block">
  <%= link_to 'Add New Comment', new_outcome_comment_path(@outcome) %>
</div>

